# scrot & gimp - root
bindsym Print exec --no-startup-id "scrot -e 'mv $f /tmp/ && gimp /tmp/$f'"

# scrot & gimp - select window or rectangle
bindsym --release $mod+Print exec --no-startup-id "scrot -s -e 'mv $f /tmp/ && gimp /tmp/$f'"

